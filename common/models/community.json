{
  "name": "Community",
  "plural": "Communities",
  "base": "User",
  "options": {
    "validateUpsert": true
  },
  "mixins": {
    "TimeStamp": true
  },
  "properties": {
    "name": {
      "type": "string",
      "required": true
    },
    "email": {
      "type": "string"
    }
  },
  "validations": [],
  "relations": {
    "roles": {
      "type": "hasMany",
      "model": "Role",
      "foreignKey": "principalId",
      "through": "RoleMapping"
    },
    "accessTokens": {
      "type": "hasMany",
      "model": "AccessToken",
      "foreignKey": "userId",
      "options": {
        "disableInclude": true
      }
    }
  },
  "acls": [
    {
      "accessType": "*",
      "principalType": "ROLE",
      "principalId": "admin",
      "permission": "ALLOW"
    }
  ],
  "methods": {
    "prototype.removeRole": {
      "accepts": [
        {
          "arg": "communityId",
          "type": "string",
          "required": true,
          "description": "The community id"
        },
        {
          "arg": "roleId",
          "type": "string",
          "required": true,
          "description": "The role id"
        }
      ],
      "returns": [],
      "description": "Remove a role from a Community (user)",
      "http": [
        {
          "path": "role/remove",
          "verb": "delete"
        }
      ]
    }
  }
}
