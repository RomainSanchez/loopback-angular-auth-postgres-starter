{
  "name": "Attachment",
  "base": "PersistedModel",
  "idInjection": true,
  "options": {
    "validateUpsert": true
  },
  "mixins": {
    "TimeStamp": true
  },
  "properties": {
    "name": {
      "type": "string",
      "required": true
    },
    "file": {
      "type": "any",
      "required": true
    }
  },
  "validations": [],
  "relations": {
    "referral": {
      "type": "belongsTo",
      "model": "Referral",
      "foreignKey": "referralId",
      "options": {
        "nestRemoting": true
      }
    }
  },
  "acls": [],
  "methods": {
    "upload": {
      "accepts": [
        {
          "arg": "data",
          "type": "object",
          "required": true,
          "http": {
            "source": "req"
          },
          "description": "The http request"
        }
      ],
      "returns": [
        {
          "arg": "response",
          "type": "object",
          "required": true,
          "description": "The http response",
          "root": true
        }
      ],
      "description": "Upload a file",
      "http": [
        {
          "path": "/upload",
          "verb": "post"
        }
      ]
    },
    "uploadSignedDocument": {
      "accepts": [
        {
          "arg": "data",
          "type": "object",
          "required": true,
          "http": {
            "source": "req"
          },
          "description": "The http request"
        }
      ],
      "returns": [
        {
          "arg": "response",
          "type": "object",
          "required": true,
          "description": "The http response",
          "root": true
        }
      ],
      "description": "Upload a file as referral signed document",
      "http": [
        {
          "path": "/upload-signed",
          "verb": "post"
        }
      ]
    }
  }
}
