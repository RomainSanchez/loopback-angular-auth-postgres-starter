{
  "name": "Referral",
  "base": "PersistedModel",
  "idInjection": true,
  "options": {
    "validateUpsert": true
  },
  "mixins": {
    "TimeStamp": true,
    "Ownable": true
  },
  "properties": {
    "approved": {
      "type": "boolean",
      "default": false
    },
    "data": {
      "type": "object",
      "required": true
    },
    "status": {
      "type": "string",
      "required": true,
      "default": "new"
    }
  },
  "validations": [],
  "relations": {
    "form": {
      "type": "belongsTo",
      "model": "Form",
      "foreignKey": "formId",
      "options": {
        "nestRemoting": true
      }
    },
    "attachments": {
      "type": "hasMany",
      "model": "Attachment",
      "options": {
        "nestRemoting": true
      }
    },
    "signedSummary": {
      "type": "hasOne",
      "model": "Attachment",
      "foreignKey": "signedSummaryOfId",
      "options": {
        "nestRemoting": true
      }
    }
  },
  "acls": [],
  "methods": {
    "generateSummary": {
      "accepts": [
        {
          "arg": "id",
          "type": "number",
          "required": true,
          "http": {
            "source": "query"
          }
        }
      ],
      "returns": [
        {
          "arg": "response",
          "type": "object",
          "required": true,
          "description": "The http response",
          "root": true
        }
      ],
      "description": "Generate referral summary",
      "http": [
        {
          "path": "/summary",
          "verb": "get"
        }
      ]
    }
  }
}
